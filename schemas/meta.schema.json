{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "meta.schema.json",
  "title": "Meta Config",
  "description": "SEO defaults and per-route metadata.",
  "type": "object",
  "required": ["defaults", "routes"],
  "properties": {
    "defaults": {
      "type": "object",
      "required": ["siteName", "titleTemplate", "description"],
      "properties": {
        "siteName": { "type": "string" },
        "titleTemplate": { "type": "string" },
        "description": { "type": "string" },
        "locale": { "type": "string", "default": "en_US" },
        "twitterCard": {
          "type": "string",
          "enum": ["summary", "summary_large_image"],
          "default": "summary_large_image"
        },
        "ogImage": { "type": "string" },
        "twitterSite": { "type": ["string", "null"] },
        "baseUrl": { "type": ["string", "null"], "format": "uri" }
      },
      "additionalProperties": false
    },
    "routes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/RouteMeta"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "RouteMeta": {
      "type": "object",
      "required": ["title", "description"],
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "ogImage": { "type": "string" },
        "noindex": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  }
}
