{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "site.schema.json",
  "title": "Site Config",
  "description": "Main site configuration: hero, about, CCR, contact, notices, quick links.",
  "type": "object",
  "required": ["ccr", "contact", "hero"],
  "properties": {
    "about": {
      "type": "object",
      "properties": {
        "left": { "type": "array", "items": { "type": "string" }, "default": [] },
        "right": { "type": "array", "items": { "type": "string" }, "default": [] }
      },
      "additionalProperties": false
    },
    "ccr": {
      "type": "object",
      "required": ["title", "primary", "secondary"],
      "properties": {
        "title": { "type": "string" },
        "primary": { "$ref": "#/$defs/LinkItem" },
        "secondary": { "$ref": "#/$defs/LinkItem" }
      },
      "additionalProperties": false
    },
    "contact": {
      "type": "object",
      "required": ["phone", "paOneCallUrl", "address"],
      "properties": {
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "paOneCallUrl": { "type": "string", "format": "uri" },
        "address": {
          "type": "object",
          "properties": {
            "buildingName": { "type": "string" },
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "zip": { "type": "string" },
            "poBox": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "hero": {
      "type": "object",
      "required": ["title", "tagline", "ctas"],
      "properties": {
        "title": { "type": "string" },
        "tagline": { "type": "string" },
        "ctas": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/CTAItem" }
        },
        "image": {
          "type": "object",
          "required": ["src", "alt"],
          "properties": {
            "src": { "type": "string" },
            "alt": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "notices": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "required": ["title", "date", "to"],
        "properties": {
          "title": { "type": "string" },
          "date": { "type": "string" },
          "to": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "quickLinks": {
      "type": "array",
      "default": [],
      "items": { "$ref": "#/$defs/LinkItem" }
    },
    "siteTitle": {
      "type": "string",
      "default": "Honey Brook Brough Authority"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "LinkItem": {
      "type": "object",
      "required": ["label", "to"],
      "properties": {
        "label": { "type": "string" },
        "to": { "type": "string" }
      },
      "additionalProperties": false
    },
    "CTAItem": {
      "type": "object",
      "required": ["label", "to"],
      "properties": {
        "label": { "type": "string" },
        "to": { "type": "string" },
        "variant": {
          "type": "string",
          "enum": ["primary", "ghost", "outline"],
          "default": "primary"
        }
      },
      "additionalProperties": false
    }
  }
}
