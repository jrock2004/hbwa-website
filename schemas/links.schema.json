{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "links.schema.json",
  "title": "Links Config",
  "description": "Grouped link collections for the helpful-links page.",
  "type": "object",
  "required": ["groups"],
  "properties": {
    "title": { "type": "string", "default": "Helpful Links" },
    "groups": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/LinkGroup" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "LinkGroup": {
      "type": "object",
      "required": ["label", "items"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/LinkItem" }
        }
      },
      "additionalProperties": false
    },
    "LinkItem": {
      "type": "object",
      "required": ["name", "url"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    }
  }
}
